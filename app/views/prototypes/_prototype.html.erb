<div class="card">
  <%= link_to image_tag(prototype.image.variant(resize: '500x500'), class: :card__img), prototype_path(prototype.id), method: :get%>
  <div class="card__body">
    <%= link_to prototype.title, prototypes_path(prototype.id), method: :get, class: :card__title%>
    <p class="card__summary">
      <%= prototype.catch_copy %>
    </p>
    <%= link_to prototype.user.name, user_path(prototype.user.id), method: :get, class: :card__user %>
  </div>
</div>